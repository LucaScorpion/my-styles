{
  "name": "my-styles",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && web-ext run",
    "build": "rimraf dist && tsc && npm run build:copy",
    "build:copy": "copyfiles -u 1 -e \"**/*.ts\" \"src/*\" dist",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "npm run lint -- --fix && prettier -w \"src/**/*.{html,css}\""
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^94.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  }
}

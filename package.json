{
  "name": "mystyles",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && web-ext run --source-dir ./dist",
    "build": "rimraf dist && tsc && cp manifest.json ./dist",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "npm run lint -- --fix && prettier -w \"src/**/*.scss\""
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^94.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  }
}

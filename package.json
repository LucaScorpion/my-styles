{
  "name": "my-styles",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && web-ext run",
    "build": "rimraf dist && webpack && npm run build:copy && npm run build:sass",
    "build:copy": "copyfiles -u 1 -e \"**/*.{ts,scss}\" \"src/**/*\" dist",
    "build:sass": "sass src:dist --no-source-map",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "npm run lint -- --fix && prettier -w \"src/**/*.{html,scss}\""
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^94.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.47.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
